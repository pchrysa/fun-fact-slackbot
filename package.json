{
  "name": "fun-fact-slackbot",
  "version": "1.0.0",
  "description": "Bot that generates fun facts",
  "scripts": {
    "test": "NODE_OPTIONS=\"--unhandled-rejections=strict\" jest --coverage",
    "report": "open ./reports/coverage/lcov-report/index.html",
    "clean": "rm -rf dist",
    "build": "yarn clean && ttsc -P ./tsconfig.json && ts-node ./scripts/build.ts",
    "dev": "nodemon --watch 'src/**/*.{ts,js}' --exec ts-node -r tsconfig-paths/register src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "yarn lint:ts",
    "lint:fix": "yarn lint:ts:fix",
    "lint:ts": "yarn lint:ts:cmd --ext ts,js .",
    "lint:ts:cmd": "eslint --cache --cache-location .cache/.eslintcache --ignore-path .gitignore --ext ts,js",
    "lint:ts:fix": "yarn lint:ts --fix"
  },
  "author": "Chrysa Papadopoulou",
  "license": "MIT",
  "dependencies": {
    "@slack/events-api": "^3.0.1",
    "@slack/web-api": "^6.7.0",
    "axios": "^0.26.0",
    "body-parser": "^1.19.2",
    "dotenv-defaults": "^5.0.0",
    "express": "^4.17.3",
    "http-status-codes": "^2.2.0",
    "nodemon": "^2.0.15",
    "path": "^0.12.7",
    "slack": "^11.0.2",
    "tsconfig-paths": "^3.12.0",
    "yarn": "^1.22.17"
  },
  "devDependencies": {
    "@types/dotenv-defaults": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1.2",
    "eslint-plugin-more": "^1.0.5",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "jest-junit": "^13.0.0",
    "lint-staged": "12.1.5",
    "prettier": "^2.6.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "ttypescript": "^1.5.13",
    "typescript": "4.4.4",
    "typescript-eslint-parser": "^22.0.0"
  }
}
